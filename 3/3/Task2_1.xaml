<Window x:Class="_3.Task2_1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3"
        mc:Ignorable="d"
        Title="Задание 2.1 - Калькулятор формул" Height="600" Width="800">
    <Window.Resources>
        <!-- Определение стилей и кистей -->
        
        <!-- Кисти -->
        <SolidColorBrush x:Key="MainBackgroundBrush" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="HeaderBrush" Color="#3F51B5"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#FF4081"/>
        <SolidColorBrush x:Key="TextBrush" Color="#212121"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="#757575"/>
        
        <!-- Градиентные кисти -->
        <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#3F51B5" Offset="0"/>
            <GradientStop Color="#303F9F" Offset="1"/>
        </LinearGradientBrush>
        
        <RadialGradientBrush x:Key="ResultBackground" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
            <GradientStop Color="#E1F5FE" Offset="0"/>
            <GradientStop Color="#B3E5FC" Offset="1"/>
        </RadialGradientBrush>
        
        <!-- Стили -->
        
        <!-- Базовый стиль для текстовых блоков -->
        <Style x:Key="BaseTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>
        
        <!-- Стиль для заголовков -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextStyle}">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource HeaderBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,20,0,20"/>
        </Style>
        
        <!-- Стиль для формулы -->
        <Style x:Key="FormulaStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextStyle}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,20"/>
        </Style>
        
        <!-- Стиль для меток -->
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0,5,0"/>
        </Style>
        
        <!-- Стиль для текстовых полей ввода -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <!-- Стиль для кнопки расчёта -->
        <Style x:Key="CalculateButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,20,0,20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="{StaticResource ButtonGradient}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="15,5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Стиль для блока с результатом -->
        <Style x:Key="ResultBlockStyle" TargetType="Border">
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Background" Value="{StaticResource ResultBackground}"/>
            <Setter Property="BorderBrush" Value="#B3E5FC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="MinHeight" Value="60"/>
        </Style>
        
        <!-- Стиль для текста результата -->
        <Style x:Key="ResultTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BaseTextStyle}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid Background="{StaticResource MainBackgroundBrush}">
        <StackPanel Margin="20">
            <TextBlock Text="Расчет формулы" Style="{StaticResource HeaderStyle}"/>
            
            <!-- Описание формулы -->
            <Border BorderBrush="{StaticResource HeaderBrush}" BorderThickness="0,0,0,1" Margin="0,0,0,20">
                <TextBlock Text="Z = ∑∑(sin(x)·x^i + cos(y)·y^j)/(i·j)" Style="{StaticResource FormulaStyle}"/>
            </Border>
            
            <!-- Панель с параметрами -->
            <Border Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,20"
                    BorderBrush="#DDDDDD" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Параметры расчета:" 
                              Foreground="{StaticResource HeaderBrush}" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,15"/>
                    
                    <WrapPanel Grid.Row="1" HorizontalAlignment="Center">
                        <Label Content="x:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TextBoxX" Text="0,00" Style="{StaticResource TextBoxStyle}"/>
                        
                        <Label Content="y:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TextBoxY" Text="0,00" Style="{StaticResource TextBoxStyle}"/>
                        
                        <Label Content="N:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TextBoxN" Text="5" Style="{StaticResource TextBoxStyle}"/>
                        
                        <Label Content="K:" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="TextBoxK" Text="5" Style="{StaticResource TextBoxStyle}"/>
                    </WrapPanel>
                </Grid>
            </Border>
            
            <!-- Кнопка расчета -->
            <Button Content="Считать" 
                    Style="{StaticResource CalculateButtonStyle}"
                    HorizontalAlignment="Center"
                    Click="CalculateButton_Click"/>
            
            <!-- Блок с результатом -->
            <Border Style="{StaticResource ResultBlockStyle}">
                <TextBlock x:Name="ResultTextBlock" 
                           Text="Введите параметры и нажмите 'Считать' для расчета" 
                           Style="{StaticResource ResultTextStyle}"/>
            </Border>
        </StackPanel>
    </Grid>
</Window> 
<Window x:Class="_3.Task1_1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3"
        mc:Ignorable="d"
        Title="Задание 1.1 - Геометрические фигуры" Height="600" Width="800">
    <Window.Resources>
        <!-- Стиль для заголовков -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        
        <!-- Стиль для блоков с информацией о фигуре -->
        <Style x:Key="ShapeInfoStyle" TargetType="Border">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        
        <!-- Стиль для обычного текста -->
        <Style x:Key="RegularTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>
        
        <!-- Разные кисти для оформления фигур -->
        <SolidColorBrush x:Key="RhombusBrush" Color="#FFE91E63" Opacity="0.8"/>
        <SolidColorBrush x:Key="ParallelepipedBrush" Color="#FF2196F3" Opacity="0.8"/>
        <SolidColorBrush x:Key="EllipseBrush" Color="#FF4CAF50" Opacity="0.8"/>
        
        <!-- Линейный градиент для ромба -->
        <LinearGradientBrush x:Key="RhombusGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFF9800" Offset="0" />
            <GradientStop Color="#FFE91E63" Offset="1" />
        </LinearGradientBrush>
        
        <!-- Радиальный градиент для эллипса -->
        <RadialGradientBrush x:Key="EllipseGradient" Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5">
            <GradientStop Color="#FF4CAF50" Offset="0" />
            <GradientStop Color="#FF1B5E20" Offset="1" />
        </RadialGradientBrush>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Демонстрация работы с геометрическими фигурами" 
                   Style="{StaticResource HeaderStyle}"
                   FontSize="24"
                   Margin="0,20,0,20"
                   Grid.Row="0"/>
        
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <!-- Ромб -->
                <Border Style="{StaticResource ShapeInfoStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Ромб" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="Диагональ: 5" Style="{StaticResource RegularTextStyle}"/>
                            <TextBlock Text="Угол: 60°" Style="{StaticResource RegularTextStyle}"/>
                            <TextBlock Text="Площадь: 21.65" Style="{StaticResource RegularTextStyle}"/>
                            <TextBlock Text="Периметр: 20.00" Style="{StaticResource RegularTextStyle}"/>
                        </StackPanel>
                        
                        <Canvas Grid.Column="1" Width="300" Height="200">
                            <Polygon Points="150,50 250,100 150,150 50,100" 
                                     Fill="{StaticResource RhombusGradient}" 
                                     Stroke="Black" 
                                     StrokeThickness="2"/>
                        </Canvas>
                    </Grid>
                </Border>
                
                <!-- Параллелепипед -->
                <Border Style="{StaticResource ShapeInfoStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Параллелепипед" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="Длина: 4" Style="{StaticResource RegularTextStyle}"/>
                            <TextBlock Text="Ширина: 3" Style="{StaticResource RegularTextStyle}"/>
                            <TextBlock Text="Высота: 5" Style="{StaticResource RegularTextStyle}"/>
                            <TextBlock Text="Объем: 60.00" Style="{StaticResource RegularTextStyle}"/>
                            <TextBlock Text="Площадь поверхности: 94.00" Style="{StaticResource RegularTextStyle}"/>
                        </StackPanel>
                        
                        <Canvas Grid.Column="1" Width="300" Height="200">
                            <!-- Упрощенное представление в виде 2D проекции параллелепипеда -->
                            <Path Stroke="Black" StrokeThickness="2" Fill="{StaticResource ParallelepipedBrush}">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="80,80">
                                            <LineSegment Point="180,80"/>
                                            <LineSegment Point="180,150"/>
                                            <LineSegment Point="80,150"/>
                                            <LineSegment Point="80,80"/>
                                            <LineSegment Point="120,40"/>
                                            <LineSegment Point="220,40"/>
                                            <LineSegment Point="220,110"/>
                                            <LineSegment Point="180,150"/>
                                            <LineSegment Point="180,150"/>
                                        </PathFigure>
                                        <PathFigure StartPoint="180,80">
                                            <LineSegment Point="220,40"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Canvas>
                    </Grid>
                </Border>
                
                <!-- Эллипс -->
                <Border Style="{StaticResource ShapeInfoStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Эллипс" Style="{StaticResource HeaderStyle}"/>
                            <TextBlock Text="Большая полуось: 6" Style="{StaticResource RegularTextStyle}"/>
                            <TextBlock Text="Малая полуось: 4" Style="{StaticResource RegularTextStyle}"/>
                            <TextBlock Text="Площадь: 75.40" Style="{StaticResource RegularTextStyle}"/>
                            <TextBlock Text="Периметр: 31.66" Style="{StaticResource RegularTextStyle}"/>
                        </StackPanel>
                        
                        <Canvas Grid.Column="1" Width="300" Height="200">
                            <Ellipse Width="120" Height="80" Canvas.Left="90" Canvas.Top="60" 
                                     Fill="{StaticResource EllipseGradient}" 
                                     Stroke="Black" 
                                     StrokeThickness="2"/>
                        </Canvas>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window> 
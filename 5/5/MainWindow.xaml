<Window x:Class="MyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Сотрудники">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <DataGrid x:Name="PersonGrid" AutoGenerateColumns="False" IsReadOnly="True" 
                              SelectionMode="Single" SelectionChanged="PersonGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="150"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="150"/>
                            <DataGridTextColumn Header="Должность" Binding="{Binding Role.NameRole}" Width="150"/>
                            <DataGridTextColumn Header="Дата рождения" Binding="{Binding Birthday, StringFormat=dd.MM.yyyy}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <Button x:Name="AddPersonButton" Content="Добавить" Width="100" Margin="5" Click="AddPersonButton_Click"/>
                        <Button x:Name="EditPersonButton" Content="Редактировать" Width="100" Margin="5" Click="EditPersonButton_Click"/>
                        <Button x:Name="DeletePersonButton" Content="Удалить" Width="100" Margin="5" Click="DeletePersonButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Должности">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <DataGrid x:Name="RoleGrid" AutoGenerateColumns="False" IsReadOnly="True" 
                              SelectionMode="Single" SelectionChanged="RoleGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Наименование должности" Binding="{Binding NameRole}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                        <Button x:Name="AddRoleButton" Content="Добавить" Width="100" Margin="5" Click="AddRoleButton_Click"/>
                        <Button x:Name="EditRoleButton" Content="Редактировать" Width="100" Margin="5" Click="EditRoleButton_Click"/>
                        <Button x:Name="DeleteRoleButton" Content="Удалить" Width="100" Margin="5" Click="DeleteRoleButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Выход">
                <Button Content="Выход" Width="100" Height="30" Click="ExitButton_Click"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window> 
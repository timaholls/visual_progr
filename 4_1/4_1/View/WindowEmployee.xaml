<Window x:Class="_4_1.View.WindowEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4_1.View"
        xmlns:viewmodel="clr-namespace:_4_1.ViewModel"
        mc:Ignorable="d"
        Title="Сотрудники" Height="450" Width="800">
    
    <Window.Resources>
        <viewmodel:PersonViewModel x:Key="PersonViewModel"/>
    </Window.Resources>
    
    <Grid DataContext="{StaticResource PersonViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <ListView x:Name="lvEmployee" Grid.Row="0"
                  ItemsSource="{Binding ListPerson}"
                  SelectedItem="{Binding SelectedPersonDPO}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Код" Width="50" 
                                    DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Фамилия" Width="150" 
                                    DisplayMemberBinding="{Binding LastName}"/>
                    <GridViewColumn Header="Имя" Width="150" 
                                    DisplayMemberBinding="{Binding FirstName}"/>
                    <GridViewColumn Header="Должность" Width="120" 
                                    DisplayMemberBinding="{Binding Role}"/>
                    <GridViewColumn Header="Дата рождения" Width="150" 
                                    DisplayMemberBinding="{Binding Birthday, StringFormat={}{0:dd.MM.yyyy}}"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Добавить" Width="100" Margin="10"
                    Command="{Binding AddPerson}"/>
            <Button Content="Редактировать" Width="100" Margin="10"
                    Command="{Binding EditPerson}"/>
            <Button Content="Удалить" Width="100" Margin="10"
                    Command="{Binding DeletePerson}"/>
        </StackPanel>
    </Grid>
</Window> 